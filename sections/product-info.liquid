<style>
.section-container{
  font-family: "Poppins", sans-serif; 
  padding: 5% 10%;
  gap: 10%;
  background-color: #86b4f5;
  color: white;
}
.product-info{
  display: flex;
  flex-direction: row;
}
.product-image{
  height: 50%;
  width: 50%;
}
.product-title{
  font-size: 40px;
  font-weight: 500;
}
.product-paragrpah{
  font-size: 18px;
  font-weight: 300;
}
.product-features-list{
  margin: 0;
  padding: 0;
}
  
</style>

{% assign product = section.settings.product_reference %}

<section class="section-container">
<div class="product-info">
  <div class="product-image">
    <img src="{{ product.media[0] | image_url }}" width="100%;" height="100%;">
  </div>
  <div>
    {% for block in section.blocks %}
      {%- case block.type -%}
        
       {% when 'title' %}
         <div>
            <h1 class="product-title">
             {{ product.title }}
            </h1>
          </div>

     {% for variant in product.variants %}
<label>
 <img>
</label>
<input/>
{% endfor %}
        
        {%- when 'description' -%}
         <div>
            <p class="product-paragrpah">
             {{ product.description }}
            </p>
          </div>

        {%- when 'price' -%}
          <div>
            <p class="product-paragrpah">
             {{ product.price | money }}
            </p>
          </div>
        
        {%- when 'product_features' -%}
        {% if product.metafields.custom.prod_features.value != blank %}
         <ul class="product-features-list">
           {% for value in product.metafields.custom.prod_features.value %}
            <p class="product-paragrpah">{{ value }}</p>
           {% endfor %}
         </ul>
        {% endif %}
        
      {% endcase %}
    {% endfor %}
  </div>
</div>
</section>

<script>
  
</script>

{% schema %}
{
  "name": "Product Info",
  "tag": "section",
  "class": "section",
  "blocks": [
    {
      "type": "title",
      "name": "Product title",
      "limit": 1
    },
    {
      "type": "description",
      "name": "Product description",
      "limit": 1
    },
    {
      "type": "price",
      "name": "price"
    },
    {
      "type": "product_features",
      "name": "product_feature"
     }
  ],
  "settings": [
    {
       "type": "product",
       "id": "product_reference",
       "label": "Choose product"
    }
  ],
  "presets": [
    {
      "name": "Product Info",
      "blocks":[
        {
          "type": "title"
        },
        {
          "type": "description"
        },
        {
          "type": "price" 
        },
        {
          "type": "product_features"
        }
      ]
    }
  ]
}
{% endschema %}